<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/red"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Calcolatrice, ma di Pinto"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/titolo"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/titolo"
        android:id="@+id/spazio1"/>

    <Space
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@id/input"
        android:layout_below="@id/spazio1"
        android:id="@+id/spazio3" />

    <Space
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_below="@id/spazio1"
        android:layout_toLeftOf="@id/input"
        android:id="@+id/spazio4" />

    <Button
        android:id="@+id/incremento"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/spazio1"
        android:layout_toLeftOf="@id/spazio4"
        android:text="+"
        android:textSize="40dp"
        />

    <EditText
        android:id="@+id/input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="40dp"
        android:layout_below="@+id/spazio1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_alignBaseline="@+id/incremento"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="-"
        android:layout_toRightOf="@id/spazio3"
        android:layout_below="@id/spazio1"
        android:id="@+id/decremento"
        android:textSize="36dp" />


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar"
        android:max="100"
        android:layout_below="@id/incremento"/>
